<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_white_corner16"
        android:gravity="center"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_corner16"
            android:gravity="center"
            android:hint=" WELCOME TO COMEBACK"
            android:textAlignment="center"
            android:textColorHint="#0DA9EF"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:hint="ĐĂNG NHẬP VỚI TƯ CÁCH"
            android:textColorHint="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/qlButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:backgroundTint="#AFC3B1"
            android:text="Admin"
            android:textSize="18dp" />

        <Button
            android:id="@+id/gvButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#7AE3D6"
            android:text="Teacher"
            android:textSize="18dp" />

        <Button
            android:id="@+id/svButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#8FB6DF"
            android:text="Student"
            android:textSize="18dp" />

    </LinearLayout>
</RelativeLayout>
