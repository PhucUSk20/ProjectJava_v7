<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.ResetPassword">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/bg_white_corner16"
        android:orientation="vertical">

        <EditText
            android:id="@+id/pass_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="Mật Khẩu Mới"
            android:drawableStart="@drawable/baseline_lock_24"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:padding="5dp"
            android:inputType="textPassword"
            android:textColorHint="@color/black"
            android:textSize="20sp"></EditText>

        <TextView
            android:id="@+id/check_pass_reset"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:textColor="#E12012"
            android:textSize="15dp"></TextView>

        <EditText
            android:id="@+id/confirm_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:hint="Nhập Lại Mật khẩu"
            android:drawableStart="@drawable/baseline_check_circle_24"
            android:drawableLeft="@drawable/baseline_check_circle_24"
            android:padding="5dp"
            android:inputType="textPassword"
            android:textColorHint="@color/black"
            android:textSize="20sp"></EditText>

        <TextView
            android:id="@+id/check_confirm_reset"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:textColor="#E12012"
            android:textSize="15dp"></TextView>

        <Button
            android:id="@+id/btnok_reset"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="LƯU"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/display_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"></TextView>
    </LinearLayout>

</RelativeLayout>